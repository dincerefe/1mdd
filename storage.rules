rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ---------- PROFILE PICTURES ----------
    // Matches: profile_pictures/USER_ID.jpg
    match /profile_pictures/{fileName} {
      allow read: if true;
      // Only allow write if the filename is exactly "USER_ID.jpg"
      allow write: if request.auth != null && fileName == request.auth.uid + '.jpg';
    }

    // ---------- VIDEOS ----------
    // Matches: videos/USER_ID/FILENAME.mp4
    match /videos/{userId}/{fileName} {
      // Must be public read so Public Feed works
      allow read: if true;
      // Only owner can upload/delete (with 100MB size limit)
      allow write: if request.auth != null && 
                      request.auth.uid == userId && 
                      request.resource.size < 100 * 1024 * 1024;
    }
  }
}

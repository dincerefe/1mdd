          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "",
                  "// If user created successfully, save tokens",
                  "if (jsonData.idToken) {",
                  "    pm.collectionVariables.set('ID_TOKEN', jsonData.idToken);",
                  "    pm.collectionVariables.set('USER_ID', jsonData.localId);",
                  "    pm.collectionVariables.set('REFRESH_TOKEN', jsonData.refreshToken);",
                  "}",
                  "",
                  "pm.test('Status code is 200 (created) or 400 (user exists)', function () {",
                  "    pm.expect([200, 400]).to.include(pm.response.code);",
                  "});",
                  "",
                  "pm.test('New user created OR user already exists', function () {",
                  "    if (pm.response.code === 200) {",
                  "        pm.expect(jsonData).to.have.property('idToken');",
                  "        pm.expect(jsonData).to.have.property('localId');",
                  "        console.log('✅ New user created successfully');",
                  "    } else if (pm.response.code === 400) {",
                  "        pm.expect(jsonData.error.message).to.include('EMAIL_EXISTS');",
                  "        console.log('ℹ️ User already exists - use Sign In instead');",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
